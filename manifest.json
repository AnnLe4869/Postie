{
	"manifest_version": 2,
	"name": "Postie",
	"version": "0.5",

	"description": "Helps users save Linkedin posts",
	"homepage_url": "https://github.com/iArunava/Postie/",

	"icons": {
		"32": "icons/postie-32.png"
	},

	"browser_action": {
		"default_icon": "./icons/postie-32.png",
		"default_title": "Postie",
		"default_popup": "./popup/postie_popup.html"
	},

	"content_scripts": [
		{
			"matches": ["*://*.linkedin.com/feed/*"],
			"js": ["postie.js"]
		}
	]
}

